  border 0
  margin 0
  padding 0
  color c-text-inverse
  a
    color c-text-inverse
    &:hover
      color white
  .content-wrapper
    background c-dark-gray2
    margin-bottom 0
    h5
      margin-top 5px
      margin-bottom 15px
      set-font-size(20px)
      font-weight 400
    .facebook-plugin
      margin-top 5px
    .follow-us
      .fa
        set-font-size(36px)
        margin-right 5px
    .contact-item
