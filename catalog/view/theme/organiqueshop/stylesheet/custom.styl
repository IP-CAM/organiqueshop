html
  font-size 1em
  font-family "Open Sans","Helvetica Neue",Helvetica,Arial,sans-serif

body
  background white url('../image/bg.jpg') no-repeat fixed center top
  background-size cover
  set-font-size(14px)
  color c-gray
  padding-top 15px
  padding-bottom 15px

select.form-control, textarea.form-control, input[type="text"].form-control,
input[type="password"].form-control, input[type="datetime"].form-control,
input[type="datetime-local"].form-control, input[type="date"].form-control,
input[type="month"].form-control, input[type="time"].form-control,
input[type="week"].form-control, input[type="number"].form-control,
input[type="email"].form-control, input[type="url"].form-control,
input[type="search"].form-control, input[type="tel"].form-control,
input[type="color"].form-control
  set-font-size(14px)

.btn-default
  color c-gray

.btn-default.active, .btn-default.focus,
.btn-default:active, .btn-default:focus,
.btn-default:hover
  color c-dark-gray2

#content
  min-height 300px

.content-wrapper
  //background rgba(255,255,255,0.9)
  background white
  padding 15px
  margin-bottom 6px

#logo
  float left
  margin-right 15px
  margin-bottom 15px
  @media (min-width: screen-lg-min)
    margin-bottom 0

.brand-text
  float left
  h2
    margin-top 12px

#menu
  background c-blue
  border 0
  border-radius border-radius-base
  margin-bottom 0
  @media (min-width: screen-lg-min)
    float right
  .navbar-header
    cursor pointer
    #category
      text-shadow none
      text-transform uppercase
      font-weight 600
    .btn-navbar
      background c-blue
      box-shadow none
      border 0
      padding-left 0
      padding-right 0
  .navbar-collapse
    .nav
      a
        padding-left 15px
        padding-right 15px
  .nav
    >li
      &:hover
        background c-dark-blue
      >a
        text-shadow none
        set-font-size(14px)
        font-weight 600
        padding 15px 20px
        text-transform uppercase
        &:hover
          background c-dark-blue
    .dropdown
      &.open
        .dropdown-toggle
          background c-dark-blue
      .dropdown-menu
        border 0
        padding 0
        border-radius 0
        min-width 300px
        background c-dark-blue
        a
          color white
          font-weight 600
          display block
          padding 15px
          &:hover
            color white
            background darken(c-blue,30%)

.owl-carousel
  margin-bottom 5px !important
  .owl-wrapper-outer
    border 0
    box-shadow none
  .owl-controls
    .owl-pagination
      top 0

#search
  margin-bottom 15px
  .btn.btn-lg
    background white
    padding-left 15px
    padding-right 15px
    border-color c-light-gray2
    box-shadow none
  .form-control
    border-color c-light-gray2
    &:focus
      box-shadow none
      border-color c-blue

footer
  background 0
  border 0
  margin 0
  padding 0
  .content-wrapper
    background c-dark-gray2
    margin-bottom 0

.fc_carousel
  background 0
  padding-top 0
  padding-bottom 0
  margin 0
  .cat-featured-row
    margin-right -3px
    margin-left -3px
    .cat-item-col
      padding-left 3px
      padding-right 3px
      .item
        background white
        margin-bottom 6px

//Form
.btn-lg
  border-radius border-radius-base
.form-control
  box-shadow none
  &.input-lg
    border-radius border-radius-base
