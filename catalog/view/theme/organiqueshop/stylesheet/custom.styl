//Button
.btn-primary
  border-radius border-radius-base
  border 0
  background c-blue
  box-shadow none
  text-shadow none
  set-font-size(16px)
  text-transform uppercase
  font-weight 400
  height 40px
  padding-left 20px
  padding-right 20px
  &:hover
    background c-dark-blue
