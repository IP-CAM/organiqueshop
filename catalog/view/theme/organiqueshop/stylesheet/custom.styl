html
  font-size 1em
  font-family "Open Sans","Helvetica Neue",Helvetica,Arial,sans-serif

body
  background white url('../image/bg.jpg') no-repeat fixed center top
  background-size cover
  set-font-size(14px)
  color c-gray
  padding-top 15px
  padding-bottom 15px

select.form-control, textarea.form-control, input[type="text"].form-control,
input[type="password"].form-control, input[type="datetime"].form-control,
input[type="datetime-local"].form-control, input[type="date"].form-control,
input[type="month"].form-control, input[type="time"].form-control,
input[type="week"].form-control, input[type="number"].form-control,
input[type="email"].form-control, input[type="url"].form-control,
input[type="search"].form-control, input[type="tel"].form-control,
input[type="color"].form-control
  set-font-size(14px)

.btn-default
  color c-gray

.btn-default.active, .btn-default.focus,
.btn-default:active, .btn-default:focus,
.btn-default:hover
  color c-dark-gray2

#content
  min-height 300px

.content-wrapper
  //background rgba(255,255,255,0.9)
  background white
  padding 15px
  margin-bottom 6px
  &.cat-wrapper
    background 0
    padding-top 0
    padding-bottom 0

#logo
  float left
  margin-right 15px
  margin-bottom 15px
  @media (min-width: screen-lg-min)
    margin-bottom 0

.brand-text
  float left
  h2
    margin-top 12px

#menu
  background c-blue
  border 0
  border-radius border-radius-base
  margin-bottom 0
  @media (min-width: screen-lg-min)
    float right
  .navbar-header
    cursor pointer
    #category
      text-shadow none
      text-transform uppercase
      font-weight 600
    .btn-navbar
      background c-blue
      box-shadow none
      border 0
      padding-left 0
      padding-right 0
  .navbar-collapse
    .nav
      a
        padding-left 15px
        padding-right 15px
  .nav
    >li
      &:hover
        background c-dark-blue
      >a
        text-shadow none
        set-font-size(14px)
        font-weight 600
        padding 15px 20px
        text-transform uppercase
        &:hover
          background c-dark-blue
    .dropdown
      &.open
        .dropdown-toggle
          background c-dark-blue
      .dropdown-menu
        border 0
        padding 0
        border-radius 0
        min-width 300px
        background c-dark-blue
        a
          color white
          font-weight 600
          display block
          padding 15px
          &:hover
            color white
            background darken(c-blue,30%)

.owl-carousel
  margin-bottom 5px !important
  background transparent !important
  .owl-wrapper-outer
    border 0
    box-shadow none
  .owl-controls
    bottom 0
    height 0
    .owl-pagination
      top -30px

#search
  margin-bottom 15px
  .btn.btn-lg
    background white
    padding-left 15px
    padding-right 15px
    border-color c-light-gray2
    box-shadow none
  .form-control
    border-color c-light-gray2
    &:focus
      box-shadow none
      border-color c-blue

footer
  background 0
  border 0
  margin 0
  padding 0
  color c-text-inverse
  a
    color c-text-inverse
    &:hover
      color white
  .content-wrapper
    background c-dark-gray2
    margin-bottom 0
    h5
      margin-top 5px
      margin-bottom 15px
      set-font-size(16px)
      text-transform uppercase
      font-weight 600
    .facebook-plugin
      margin-top 5px
    .follow-us
      .fa
        set-font-size(36px)
        margin-right 5px
    .contact-item
      position relative
      margin-bottom 15px
      .icon
        position absolute
        .fa-map-marker
          set-font-size(18px)
          padding-left 2px
        .fa-envelope
          set-font-size(16px)
        .fa-phone
          set-font-size(16px)
          padding-left 2px
      .info
        padding-left 30px
        address
          margin 0
.powered
  background c-dark-gray3
  p
    margin 0
    padding 15px 0

.fc_carousel
  background 0
  padding-top 0
  padding-bottom 0
  margin 0
  .item
    background white
    margin-bottom 6px

.row-3px
  margin-left -3px
  margin-right -3px
.col-3px
  padding-left 3px
  padding-right 3px

.breadcrumb
  border 0
  border-radius 0
  background white
  margin-bottom 6px

#column-left
  .list-group
    .list-group-item
      border-radius 0
      border 0

.product-thumb
  background white
  border 0
//Form
.btn-lg
  border-radius border-radius-base
.form-control
  box-shadow none
  &.input-lg
    border-radius border-radius-base
